<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.baseleap.mapper.GuestBookMapper">

    <!-- 특정 ownerId에 해당하는 모든 방명록 항목을 검색 -->
    <select id="selectGuestBookListByOwnerId" parameterType="long" resultType="com.baseleap.model.GuestBook">
        SELECT *
        FROM Guest_book
        WHERE owner_id = #{ownerId}
    </select>

    <!-- 새로운 방명록 항목을 삽입 -->
    <insert id="insertGuestBook" parameterType="com.baseleap.model.GuestBook" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Guest_book (writer_id, owner_id, comment, created_at)
        VALUES (#{writerId}, #{ownerId}, #{comment}, #{createdAt})
    </insert>

    <!-- 방명록 항목을 업데이트 -->
    <update id="updateGuestBook" parameterType="com.baseleap.model.GuestBook">
        UPDATE Guest_book
        SET comment = #{comment},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 방명록 항목을 삭제 -->
    <delete id="deleteGuestBook" parameterType="com.baseleap.model.GuestBook">
        DELETE FROM Guest_book
        WHERE id = #{id}
    </delete>

    <!-- 특정 writerId와 ownerId에 해당하는 방명록 항목을 검색 -->
    <select id="selectGuestBookByWriterOwnerId" parameterType="map" resultType="com.baseleap.model.GuestBook">
        SELECT *
        FROM Guest_book
        WHERE owner_id = #{ownerId} AND writer_id = #{writerId}
    </select>

</mapper>